---

import ToolOptionCard from "../components/ToolOptionCard.astro";
import VideoEmbed from "../shared/components/VideoEmbed.astro";
import { MEDIA_SECTION_DATA,TOOL_OPTIONS } from "../shared/data/mediaSectionData";
import { MODAL_DATA } from "../shared/data/modal_data";

---

<section class="media_section">
  {MEDIA_SECTION_DATA.VIDEOS_ID.map((id) => <VideoEmbed videoId={id} />)}
  <div class="tool_options_container" id="tool_options">
  {TOOL_OPTIONS.map(
    ({toolName, toolDescription,options, image}) => (
      <ToolOptionCard
        image={image}
        name={toolName}
        description={toolDescription}
        options={options}
        buttonText={MEDIA_SECTION_DATA.BUTTON_TITLE}
        modalId={MODAL_DATA.CONTACT_MODAL_ID}
      />
    )
  )}
  </div>
  <footer class="media_footer">
    {MEDIA_SECTION_DATA.COMPANY_NAME}
    <br />
    {MEDIA_SECTION_DATA.OWNER_UNP}
    <br />
    {MEDIA_SECTION_DATA.COMPANY_OWNER}
    <br />
    <a class="web_solutions_link" href={MEDIA_SECTION_DATA.WEB_SOLUTIONS_LINK}>
      {MEDIA_SECTION_DATA.WEB_SOLUTIONS}
    </a>
  </footer>
</section>

<style>
  .media_section {
    padding: 40px 5%;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  :global(.tool_options_container > .tool_option_card_container:nth-child(even)) {
    flex-direction: row-reverse;
  }
  .media_footer {
    text-align: center;
    font-size: 18px;
    color: #000000;
    font-weight: bold;
    margin-top: 20px;
  }
  .web_solutions_link {
    position: relative;
    overflow: hidden;
    display: inline-block;
    margin-top: 12px;
    padding: 7px 14px;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.45);
    background: linear-gradient(120deg, #efe6ff 0%, #d2b5ff 42%, #b87dff 100%);
    color: #1b1030;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.02em;
    text-decoration: none;
    cursor: pointer;
    box-shadow: 0 4px 14px rgba(109, 48, 185, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.7);
    transition: transform 0.2s ease, box-shadow 0.2s ease, filter 0.2s ease;
    animation: web-link-glow 2.2s ease-in-out infinite;
  }
  .web_solutions_link::before {
    content: "";
    position: absolute;
    inset: 0;
    transform: translateX(-130%);
    background: linear-gradient(105deg, transparent 35%, rgba(255, 255, 255, 0.75) 50%, transparent 65%);
    animation: web-link-shine 2.8s linear infinite;
  }
  .web_solutions_link:hover {
    transform: translateY(-2px) scale(1.02);
    filter: brightness(1.05);
    box-shadow: 0 8px 22px rgba(109, 48, 185, 0.45), inset 0 1px 0 rgba(255, 255, 255, 0.75);
  }
  .web_solutions_link:active {
    transform: translateY(0) scale(0.99);
  }
  .web_solutions_link:focus-visible {
    outline: 2px solid #6b35b8;
    outline-offset: 3px;
  }
  @keyframes web-link-shine {
    100% {
      transform: translateX(130%);
    }
  }
  @keyframes web-link-glow {
    0%,
    100% {
      box-shadow: 0 4px 14px rgba(109, 48, 185, 0.35), inset 0 1px 0 rgba(255, 255, 255, 0.7);
    }
    50% {
      box-shadow: 0 7px 20px rgba(109, 48, 185, 0.48), inset 0 1px 0 rgba(255, 255, 255, 0.8);
    }
  }
</style>
