<article class="benefits_card">
    <slot/>
</article>

<style>
    :root {
        --gradient-angle: 0deg;
    }

    .benefits_card {
        position: relative;
        width: 300px;
        height: 190px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        text-transform: uppercase;
        font-size: 24px;
        color: #080808;
        line-height: 27px;
        padding: 40px 20px;
        background: rgba(255, 255, 255, 0.4);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(10, 10, 207, 0.3);
        z-index: 1;
    }

    .benefits_card::before {
        content: "";
        position: absolute;
        inset: -4px;
        border-radius: 20px;
        padding: 4px;
        background: linear-gradient(var(--gradient-angle), rgba(124, 124, 124, 0.05) 40%, rgba(46, 106, 208) 45%, rgb(125, 81, 230) 50%, rgba(117, 102, 117, 0) 60%);
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        mask-composite: exclude;
        z-index: -1;
        opacity: 0.8;
        animation: rotateGradient 5s linear infinite;
    }

    @keyframes rotateGradient {
        0% { --gradient-angle: 0deg; }
        2% { --gradient-angle: 7.2deg; }
        4% { --gradient-angle: 14.4deg; }
        6% { --gradient-angle: 21.6deg; }
        8% { --gradient-angle: 28.8deg; }
        10% { --gradient-angle: 36deg; }
        12% { --gradient-angle: 43.2deg; }
        14% { --gradient-angle: 50.4deg; }
        16% { --gradient-angle: 57.6deg; }
        18% { --gradient-angle: 64.8deg; }
        20% { --gradient-angle: 72deg; }
        22% { --gradient-angle: 79.2deg; }
        24% { --gradient-angle: 86.4deg; }
        26% { --gradient-angle: 93.6deg; }
        28% { --gradient-angle: 100.8deg; }
        30% { --gradient-angle: 108deg; }
        32% { --gradient-angle: 115.2deg; }
        34% { --gradient-angle: 122.4deg; }
        36% { --gradient-angle: 129.6deg; }
