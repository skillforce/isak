    @media (max-width: 1024px) {
        .benefits_card {
            font-size: 18px;
            line-height: 20px;
            height: 120px;
        }
    }

    @media (max-width: 660px) {
        .benefits_card {
            font-size: 16px;
            line-height: 18px;
            height: 100px;
        }
    }
</style>