<article class="benefits_card">
    <slot/>
</article>

<style>
    .benefits_card {
        position: relative;
        width: 300px;
        height: 190px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        text-transform: uppercase;
        font-size: 24px;
        color: #080808;
        line-height: 27px;
        padding: 40px 20px;
        background: rgba(255, 255, 255, 0.4);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(10, 10, 207, 0.3);
        z-index: 1;
    }

    .benefits_card::before {
        content: "";
        position: absolute;
        inset: -4px;
        border-radius: 20px;
        padding: 4px;
        background: linear-gradient(29deg, rgba(124, 124, 124, 0.05) 40%, rgba(46, 106, 208) 45%, rgb(125, 81, 230) 50%, rgba(117, 102, 117, 0) 60%);
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        mask-composite: exclude;
        z-index: -1;
        opacity: 0.8
    }

    @media (max-width: 1024px) {
        .benefits_card {
            font-size: 18px;
            line-height: 20px;
            height: 120px;
        }
        .benefits_card::before {
            background: linear-gradient(20deg, rgba(124, 124, 124, 0.05) 40%, rgba(46, 106, 208) 45%, rgb(125, 81, 230) 50%, rgba(117, 102, 117, 0) 60%);
        }
    }
    @media (max-width: 660px) {
        .benefits_card {
            font-size: 16px;
            line-height: 18px;
            height: 100px;
        }
        .benefits_card::before {
            background: linear-gradient(16deg, rgba(124, 124, 124, 0.05) 40%, rgba(46, 106, 208) 45%, rgb(125, 81, 230) 50%, rgba(117, 102, 117, 0) 60%);
        }
    }
</style>